
    <div class="modal fade" role="dialog" data-bind="attr:{id:'myModal'+ Id()}" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" data-target="#confirmmodal" data-bind="click: $parent.closeConfirmModal">&times;</button>
                    <h3 class="lead modal-title text-center">Edit Company Details</h3>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="keys control-label col-sm-3">Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" style="margin-bottom:15px; padding-left:8px" data-bind="value: Name" href="#Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="keys control-label col-sm-3">Website</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" style="margin-bottom:15px; padding-left:8px"data-bind="value: Website">
                            </div>
                        </div>
                        <p class="lead text-center">Physical Address</p>
                        <div data-bind="with: PhysicalAddress">
                            <div data-bind="template: {name:'editAddress'}"></div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-1">
                                <input data-bind="checked: isShipSame" name="isShipSame" id="isShipSame" type="checkbox">
                                
                            </div>
                            <label for="shipsame" class="col-sm-9">Billing address is the same as the physical address</label>
                        </div>
                        <div data-bind="visible: isShipDifferent">
                            <p class="lead text-center">Billing Address</p>
                            <div data-bind="with: BillingAddress">
                                <div data-bind="template: {name:'editAddress'}"></div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click:clearValidations">Cancel</button>
                    <button type="button" id="editSave" class="btn btn-success" data-bind="click: $parent.save, disable: toggleDisable" data-dismiss="modal">Save changes</button>
                </div>
            </div>
        </div>
    </div>
<div class="modal fade" role="dialog" id="confirmmodal" >
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Do you want to save the changes made to this record?</h4>
            </div>
            <div class="modal-footer">
                <form>
                    <button type="button" data-dismiss="modal" class="btn btn-default" data-bind="click: $parent.confirmNo">No</button>
                    <button type="button" class="btn btn-success" data-dismiss="modal" data-bind="click: $parent.confirmYes, disable: toggleDisable">Yes</button>
                </form>
            </div>
        </div>
    </div>
</div>

